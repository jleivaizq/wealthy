<div id="<%= dom_id property %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= property.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= property.address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">City:</strong>
    <%= property.city %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Postal code:</strong>
    <%= property.postal_code %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= property.initial_price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Meters:</strong>
    <%= property.meters %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Bedrooms:</strong>
    <%= property.bedrooms %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Bathrooms:</strong>
    <%= property.bathrooms %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Rating:</strong>
    <%= property.rating %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Link:</strong>
    <%= property.link %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Comments:</strong>
    <%= property.comments %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this property", property, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this property', edit_property_path(property), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
